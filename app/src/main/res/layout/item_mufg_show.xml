<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_mufg_show_height"
    android:layout_marginEnd="@dimen/dialog_margin_start_end"
    android:layout_marginStart="@dimen/dialog_margin_start_end"
    android:layout_marginTop="@dimen/dialog_margin_top"
    app:cardCornerRadius="4dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_mufg_show_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mufgNumber"
            android:layout_width="@dimen/item_mufg_show_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/mufgImage"
            android:layout_width="@dimen/item_mufg_show_height"
            android:layout_height="@dimen/item_mufg_show_height"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mufg_show_height"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mufgID"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorCyan"/>

            <TextView
                android:id="@+id/mufgSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorPink"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
